<p id="notice"><%= notice %></p>

<h1>My Sitter Requests</h1>

<div class="row">
  <div class="col-md-8">
    <table class="table">
      <thead>
        <tr>
          <th>Date & Time</th>
          <th>Hours</th>
          <th>Message</th>
          <th>Details</th>
          <th>Delete</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @git_sitters.each do |git_sitter| %>
          <tr>
            <td><%= git_sitter.when %></td>
            <td><%= git_sitter.how_long %></td>
            <td><%= git_sitter.message %></td>
            <td><%= link_to git_sitter, class: 'btn btn-success' do %>
            <span class="glyphicon glyphicon-search"></span></td>
            <% end %>
            <td><%= link_to git_sitter, class: 'btn btn-danger', method: :delete do %>
            <span class="glyphicon glyphicon-trash"></span></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>