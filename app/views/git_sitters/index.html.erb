<p id="notice"><%= notice %></p>

<h1>My Sitter Requests</h1>

<table class="table">
  <thead>
    <tr>
      <th>GitSitter id</th>
      <th>User id</th>
      <th>When (Date & Time)</th>
      <th>How long (Hrs)</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @git_sitters.each do |git_sitter| %>
      <tr>
        <td><%= git_sitter.id %></td>
        <td><%= git_sitter.user_id %></td>
        <td><%= git_sitter.when %></td>
        <td><%= git_sitter.how_long %></td>
        <td><%= git_sitter.message %></td>
        <td><%= link_to 'Show', git_sitter %></td>
        <td><%= link_to edit_git_sitter_path(git_sitter), class: 'btn btn-warning' do %>
        <span class="glyphicon glyphicon-pencil"></span></td>
        <% end %>
        <td><%= link_to git_sitter, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } do %>
        <span class="glyphicon glyphicon-trash"></span></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
