<p id="notice"><%= notice %></p>

<h1>My Sitters</h1>

<table class="table">
  <thead>
    <tr>
      <th>Select</th>
      <th>Sitter id</th>
      <th>User id</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Edit</th>
      <th>Remove</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sitters.each do |sitter| %>
      <tr>
        <td><%= render partial: 'sitter_selections/sitter_selection', locals: { sitter: sitter } %></td>
        <td><%= sitter.id %></td>
        <td><%= sitter.user.id %></td>
        <td><%= sitter.name %></td>
        <td><%= sitter.phone %></td>
        <td><%= link_to edit_sitter_path(sitter) do %>
        <span class="glyphicon glyphicon-pencil"></span></td>
        <% end %>
        <td><%= link_to sitter, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <span class="glyphicon glyphicon-trash"></span></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sitter', new_sitter_path %>


